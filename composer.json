{
    "name": "designbycode/reviews",
    "description": "This is a Google Reviews",
    "keywords": [
        "designbycode",
        "reviews",
        "google reviews"
    ],
    "homepage": "https://github.com/designbycode/reviews",
    "license": "MIT",
    "authors": [
        {
            "name": "claudemyburgh",
            "email": "claude@designbycode.co.za",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1 | ^8.2 | ^8.3",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "pestphp/pest": "^2.20",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Designbycode\\Reviews\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Designbycode\\Reviews\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
